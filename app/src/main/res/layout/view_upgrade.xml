<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="@drawable/back"
    android:id="@+id/upgradeView_card"
    >


    <TextView
        android:id="@+id/upgradeView_titulo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/upgradeView_desc"
        android:textStyle="italic|bold"
        android:text="Titulo" />

    <TextView
        android:id="@+id/upgradeView_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:paddingLeft="4dp"
        android:textStyle="italic|bold"
        app:layout_constraintLeft_toRightOf="@id/upgradeView_titulo"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/upgradeView_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@+id/upgradeView_titulo"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="descricao" />

    <TextView
        android:id="@+id/upgradeView_custo"
        android:text="10"
        android:paddingRight="8sp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingVertical="13dp"
        android:background="@drawable/back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/upgradeView_desc"
        />



</androidx.constraintlayout.widget.ConstraintLayout>